<h1>Listing operative_systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operative_systems.each do |operative_system| %>
      <tr>
        <td><%= operative_system.name %></td>
        <td><%= operative_system.description %></td>
        <td><%= link_to 'Show', operative_system %></td>
        <td><%= link_to 'Edit', edit_operative_system_path(operative_system) %></td>
        <td><%= link_to 'Destroy', operative_system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

